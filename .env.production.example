# Production Environment Configuration
# Copy this file to .env.production and fill in the actual values

# Application
NODE_ENV=production
PORT=3000
HOSTNAME=0.0.0.0

# Database Configuration
DATABASE_URL="postgresql://username:password@db:5432/kin_workspace_prod"
POSTGRES_DB=kin_workspace_prod
POSTGRES_USER=kin_workspace_user
POSTGRES_PASSWORD=your_secure_database_password

# Authentication
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=your_very_long_random_secret_key_here_minimum_32_chars

# Redis Configuration (Optional - improves performance in production)
# Leave empty to use in-memory caching only
REDIS_URL=redis://:your_redis_password@redis:6379
REDIS_PASSWORD=your_secure_redis_password

# Cache Configuration
PERMISSION_CACHE_TTL=300000
CACHE_MAX_ITEMS=2000
# CACHE_DISABLED=true  # Uncomment to disable all caching

# Security Configuration
CSRF_SECRET=your_csrf_secret_key_here
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_32_character_encryption_key

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring and Logging
LOG_LEVEL=info
MONITORING_API_KEY=your_monitoring_service_api_key
GRAFANA_PASSWORD=your_secure_grafana_password

# Email Configuration (for notifications)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASSWORD=your_smtp_password
FROM_EMAIL=noreply@your-domain.com

# External Services
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Security Headers
CONTENT_SECURITY_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' https:; frame-ancestors 'none';"

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/private.key

# Backup Configuration
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1