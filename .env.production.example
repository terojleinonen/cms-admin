# Kin Workspace CMS - Production Environment Configuration

# Database Configuration
POSTGRES_PASSWORD=your_secure_database_password_here
DATABASE_URL=postgresql://cms_user:your_secure_database_password_here@postgres:5432/kin_workspace_cms

# Authentication
NEXTAUTH_SECRET=your_very_secure_nextauth_secret_key_here_minimum_32_characters
NEXTAUTH_URL=https://your-domain.com

# Redis Cache (Optional)
REDIS_URL=redis://redis:6379

# File Upload Configuration
UPLOAD_DIR=/app/public/uploads
MAX_FILE_SIZE=10485760

# Email Configuration (for notifications)
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=your-email@your-domain.com
SMTP_PASS=your_email_password
SMTP_FROM=noreply@your-domain.com

# Security
CSRF_SECRET=your_csrf_secret_key_here_minimum_32_characters
ADMIN_DEFAULT_PASSWORD=secure_admin_password_change_immediately
EDITOR_DEFAULT_PASSWORD=secure_editor_password_change_immediately

# Application Settings
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=info

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# SSL Configuration (if using custom certificates)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem